<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Celerity_admin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">#BE1E2D</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Celerity_admin" parent="Base.Theme.Celerity_admin" />

    <style name="Theme.Celerity_admin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.Celerity_admin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="NavigationTheme" parent="Base.Theme.Celerity_admin">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/grey_main</item>
        <item name="boxBackgroundColor">#FFFAFA</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="Theme.Celerity_admin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>