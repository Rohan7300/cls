<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_orange"
    android:orientation="vertical"
    tools:context=".ui.ClSReports.WeeklyDefectsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/weekly_defect_adapter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/black"
        android:orientation="horizontal">
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/placeholder1"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/prev"
            android:src="@drawable/back"
            app:tint="@color/red_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/weekNoTV"
            android:gravity="center"
            android:text="Week No. 24"
            android:textColor="@color/red_light"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/next"
            app:tint="@color/red_light"
            android:src="@drawable/next" />
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/placeholder2"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>