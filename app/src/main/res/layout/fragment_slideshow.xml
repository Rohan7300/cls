<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_blue"
    android:orientation="vertical"
    tools:context=".ui.ClSReports.WeeklyDefectsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
        android:overScrollMode="never"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/weekly_defect_adapter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/nodataLayout"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/data" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opps!! No data Found"
            android:textStyle="normal"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:orientation="horizontal"
        android:padding="10dp">

        <View
            android:id="@+id/placeholder1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/weekNoTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/cq_sdk_poppins_bold"
            android:gravity="center"
            android:text="_ _ _ _"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/next"
            app:tint="@color/white" />

        <View
            android:id="@+id/placeholder2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>