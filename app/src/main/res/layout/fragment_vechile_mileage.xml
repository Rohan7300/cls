<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VechileMileageFragment"
    >
    <include
        android:id="@+id/headerTop"
        layout="@layout/fragment_headers"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mileage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="35dp"
                android:padding="2dp"
                android:src="@drawable/vichle_mileage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlinfo" />

            <TextView
                android:id="@+id/vehicle_mil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="top"
                android:lineHeight="30sp"
                android:text="@string/vehicle_mil"
                android:textColor="#4A4A4A"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_mileage" />

            <TextView
                android:id="@+id/previous_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:letterSpacing="0.02"
                android:text="@string/previous_re"
                android:textColor="#626C7C"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_mil" />

            <TextView
                android:id="@+id/miles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/miles"
                android:textColor="#626C7C"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"
                app:layout_constraintEnd_toEndOf="@+id/previous_re"
                app:layout_constraintStart_toStartOf="@+id/previous_re"
                app:layout_constraintTop_toBottomOf="@id/previous_re" />

            <EditText
                android:id="@+id/edt_milvm"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext_mileage"
                android:fontFamily="@font/poppins"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Enter Vehicle Start Mileage ..."
                android:importantForAutofill="no"
                android:inputType="number"
                android:letterSpacing="0.03"
                android:lineHeight="18sp"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="#AAB9CF"
                android:textCursorDrawable="@drawable/txt_cursor_drawable"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/miles" />



