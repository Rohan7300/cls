<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetRealCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/constmain"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/blueRactIV"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:backgroundTint="@color/maroon"
                android:background="@drawable/ic_rectangle_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancleIV"
                android:layout_width="23dp"
                android:layout_height="23dp"
android:tint="@color/white"
                android:layout_marginEnd="20dp"
                android:src="@drawable/baseline_close_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/blueRactIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/blueRactIV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="Upload vehicle pictures"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/blueRactIV"
                app:layout_constraintEnd_toEndOf="@id/blueRactIV"
                app:layout_constraintStart_toStartOf="@+id/blueRactIV"
                app:layout_constraintTop_toTopOf="@id/blueRactIV" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/pb1"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
            android:indeterminateTint="@color/red_light"
            android:progressDrawable="@color/red_light"
            android:progressBackgroundTint="@color/red_light"
            android:progressTint="@color/red_light"
            />



        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titledes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Click on Start Inspection to upload vehicle images:-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bt_startInspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/baseline_camera_24"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_edittext"

            android:gravity="bottom"

            android:paddingStart="26dp"
            android:paddingTop="12dp"
            android:paddingEnd="26dp"
            android:paddingBottom="12dp"
            android:text="Start Inspection"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rlmain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titledes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Done)"
            android:id="@+id/txtdone"
            android:visibility="gone"
            android:textColor="@color/green"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_startInspection"
            app:layout_constraintStart_toEndOf="@+id/bt_startInspection"
            app:layout_constraintTop_toTopOf="@+id/bt_startInspection" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
            android:background="@drawable/shaperadio"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/rlmain"

            android:orientation="horizontal"
android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_startInspection">

            <TextView
                android:id="@+id/edt_traingtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:gravity="center"
                android:hint="Return depo?/ Return to supplier"
                android:padding="14dp"
                android:textColorHint="#4A4A4A"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rbTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           android:backgroundTint="@color/light_grey"

                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@id/edt_traingtwo"
                />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llmthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:background="@drawable/shaperadio"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/rlmain"
          >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"


                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtroadworthy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:hint="Road worthy?"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textSize="12sp"
            />

                <RadioButton
                    android:id="@+id/roadworthy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/light_grey"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@id/txtroadworthy"
                    android:background="#FBC8C8"
                    android:gravity="center" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notworthy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/light_grey"

                    android:gravity="center"
                    android:hint="Not Road worthy?"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textSize="12sp"
                 />

                <RadioButton
                    android:id="@+id/notworthys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"

                    android:backgroundTint="@color/light_grey"
                    android:layout_toRightOf="@id/notworthy"
                    android:background="#FBC8C8" />

            </RelativeLayout>

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_three"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/shaperadio"
            android:backgroundTint="@color/light_grey"
            android:hint="Select request type *"
            android:visibility="gone"
            app:hintAnimationEnabled="false"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/llmthree">

            <EditText
                android:id="@+id/edt"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="12dp"

                android:textSize="13sp" />


        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>





        </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/bt_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/shape_edittext"
            android:backgroundTint="@color/maroon"
            android:gravity="center"
            android:paddingStart="26dp"
            android:paddingTop="12dp"
            android:paddingEnd="26dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>