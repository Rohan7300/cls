<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.VechileMileageFragment">

        <include
            android:id="@+id/headerTop"
            layout="@layout/fragment_headers" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/lln"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:id="@+id/img_mileage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/windscreen_ic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlinfo" />

                <TextView
                    android:id="@+id/vehicle_mil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="top"
                    android:lineHeight="30sp"
                    android:text="Wind Screen"
                    android:textColor="#4A4A4A"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_mileage" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/const_upload"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/edt_mil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/defect_selector"
                        android:fontFamily="@font/inter"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.01"
                        android:lineHeight="18sp"
                        android:padding="16dp"
                        android:text="Defect"
                        android:textColor="#4A4A4A"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/image_radio"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/defect_checbox_selector"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintTop_toTopOf="@id/edt_mil"
                        app:layout_constraintBottom_toBottomOf="@+id/edt_mil"
                      />


                    <RelativeLayout
                        android:id="@+id/rl_upload_defect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/edt_mil"
                        tools:layout_editor_absoluteY="61dp">

                        <EditText
                            android:id="@+id/edt_defect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/new_edittext_defect"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:hint="@string/enter_defect"
                            android:importantForAutofill="no"
                            android:letterSpacing="0.03"
                            android:lineHeight="18sp"
                            android:padding="16dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="#AAB9CF"
                            android:textCursorDrawable="@drawable/txt_cursor_drawable"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_defect"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:id="@+id/windScreenIV"
                                android:layout_width="50dp"
                                android:layout_height="39dp"
                                android:src="@drawable/upload_bt" />

                            <TextView
                                android:id="@+id/upload_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/inter"
                                android:letterSpacing="0.02"
                                android:text="Upload Image"
                                android:textColor="#231F20"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/upload_txt_two"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_toRightOf="@+id/upload_txt"
                                android:fontFamily="@font/inter"
                                android:gravity="center_vertical"
                                android:letterSpacing="0.02"
                                android:text=" (Optional)"
                                android:textColor="#4A4A4A"
                                android:textSize="13sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/edt_mils_layout_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/rl_upload_defect">

                        <TextView
                            android:id="@+id/edt_mil_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/defect_selector"
                            android:fontFamily="@font/inter"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.02"
                            android:lineHeight="18sp"
                            android:padding="16dp"
                            android:text="Functional"
                            android:textColor="#4A4A4A"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/image_radio_two"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/defect_checbox_selector"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/edt_mil_two"
                            app:layout_constraintTop_toTopOf="@id/edt_mil_two"
                            android:layout_marginEnd="30dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/rl_upload_defect_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/edt_mils_layout_two">

                        <EditText
                            android:id="@+id/edt_defect_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/shape_edittext_mileage"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:hint="Enter Defect*"
                            android:importantForAutofill="no"
                            android:letterSpacing="0.03"
                            android:lineHeight="18sp"
                            android:padding="20dp"
                            android:textColor="@color/orange"
                            android:textColorHint="#AAB9CF"
                            android:textCursorDrawable="@drawable/txt_cursor_drawable"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_defect_two"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="62dp"
                                android:layout_height="44dp"
                                android:src="@drawable/upload_bt" />

                            <TextView
                                android:id="@+id/upload_txt_two_me"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/inter"
                                android:letterSpacing="0.02"
                                android:text="Upload Image"
                                android:textColor="#231F20"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/upload_txt_two_new"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_toRightOf="@+id/upload_txt_two_me"
                                android:fontFamily="@font/inter"
                                android:gravity="center_vertical"
                                android:letterSpacing="0.02"
                                android:text=" (Optional)"
                                android:textColor="#4A4A4A"
                                android:textSize="13sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_next"
                    style="@style/ctaStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:enabled="false"
                    android:fontFamily="@font/inter"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Save &amp; Next"
                    android:textAllCaps="false"
                    android:textColor="#F36C2E"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
