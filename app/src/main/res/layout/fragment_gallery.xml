<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SCROLLS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_blue">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_blue">

        <LinearLayout
            android:id="@+id/llhh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="4dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarDefaultDelayBeforeFade="5000"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgchangevehicle_allocation"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_round"
                            app:civ_border_width="1dp"

                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imgchange"
                            android:layout_width="29dp"
                            android:layout_height="32dp"
                            android:src="@drawable/vehicleallocation"
                            android:tint="@color/black"
                            app:layout_constraintBottom_toBottomOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintTop_toTopOf="@id/imgchangevehicle_allocation" />

                        <TextView

                            android:id="@+id/tvchange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Change allocation"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintTop_toBottomOf="@id/imgchangevehicle_allocation" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgchangevehicle_return"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/img_round"
                            app:civ_border_width="1dp"
                            app:layout_constraintStart_toEndOf="@+id/imgchangevehicle_allocation"
                            app:layout_constraintTop_toTopOf="@+id/imgchangevehicle_allocation" />

                        <ImageView
                            android:id="@+id/imgchange_imgchangevehicle_return"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:src="@drawable/lease"
                            app:layout_constraintBottom_toBottomOf="@+id/imgchangevehicle_return"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_return"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_return"
                            app:layout_constraintTop_toTopOf="@id/imgchangevehicle_return" />

                        <TextView

                            android:id="@+id/tvchange_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Return vehicle"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_return"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_return"
                            app:layout_constraintTop_toBottomOf="@id/imgchangevehicle_return" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgchangevehicle_collection"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/img_round"
                            app:civ_border_width="1dp"
                            app:layout_constraintStart_toEndOf="@+id/imgchangevehicle_return"
                            app:layout_constraintTop_toTopOf="@+id/imgchangevehicle_return" />

                        <ImageView
                            android:id="@+id/imgchange_collection"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:src="@drawable/carss"
                            app:layout_constraintBottom_toBottomOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintTop_toTopOf="@id/imgchangevehicle_collection" />

                        <TextView

                            android:id="@+id/tvchange_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Collection request"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintTop_toBottomOf="@id/imgchangevehicle_collection" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgchangevehicle_transfer"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/img_round"
                            app:civ_border_width="1dp"
                            app:layout_constraintStart_toEndOf="@+id/imgchangevehicle_collection"
                            app:layout_constraintTop_toTopOf="@+id/imgchangevehicle_collection" />

                        <ImageView
                            android:id="@+id/imgchange_transfer"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:src="@drawable/transferda"
                            app:layout_constraintBottom_toBottomOf="@+id/imgchangevehicle_transfer"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_transfer"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_transfer"
                            app:layout_constraintTop_toTopOf="@id/imgchangevehicle_transfer" />

                        <TextView

                            android:id="@+id/tvchange_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Transfer Assign DA"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imgchangevehicle_transfer"
                            app:layout_constraintStart_toStartOf="@+id/imgchangevehicle_transfer"
                            app:layout_constraintTop_toBottomOf="@id/imgchangevehicle_transfer" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="@color/maroon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="OSM Area Manager"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Change Vehicle Allocation"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
android:alpha="0.2"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/llhh">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/textView3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
android:alpha="0.5"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_round_1"
                    app:civ_border_width="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_edit_9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/baseline_car_crash_24"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="@id/textView3" />

                <TextView

                    android:id="@+id/tv_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
android:alpha="0.5"
                    android:text="Options"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_edit_9" />

                <ImageView
                    android:id="@+id/checkone"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/baseline_check_24"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consttwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_round_1"
                    app:civ_border_width="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/checktwo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baseline_check_24"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                <ImageView
                    android:id="@+id/iv_edit_8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/carme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@id/textView4" />

                <TextView

                    android:id="@+id/msdes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Vehicle Information"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_edit_8" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.2"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/textView6"
                    android:layout_width="138dp"
                    android:layout_height="188dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/img_round_1"
                    app:civ_border_width="1dp"
                    app:layout_constraintEnd_toEndOf="parent"


                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/checkfour"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_check_24"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <ImageView
                    android:id="@+id/iv_edit_11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/cameras"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@id/textView6" />

                <TextView

                    android:id="@+id/msdesdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Upload Images"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/iv_edit_11" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constfour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/img_round_1"
                    app:civ_border_width="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/checkfive"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_check_24"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5" />

                <ImageView
                    android:id="@+id/iv_edit_12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/baseline_car_rental_24"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@id/textView5" />

                <TextView

                    android:id="@+id/msdesddn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Hire Agreement"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/iv_edit_12" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
