<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.OnRoadHoursFragment">
                <include
                    android:id="@+id/headerTop"
                    layout="@layout/fragment_headers" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/very_light_orange"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@color/very_light_orange"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_edittext_onroad">

                    <View
                        android:id="@+id/views"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constlayout" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constroutename" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/const_select_route" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constparcel" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constparcel_back" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constmileage" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/select_route_location" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_edittext_onroad"
                            android:backgroundTint="@color/very_light_orange"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="0.02"
                            android:padding="10dp"
                            android:text="Add OnRoad Hours"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/constroutename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/views">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/route"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="Route Name*"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Route Name *"
                            app:hintTextColor="@color/black">

                            <EditText
                                android:id="@+id/edt_routesORH"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                android:fontFamily="@font/poppins"

                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:padding="12dp"

                                android:textSize="13sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/const_select_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"

                        app:layout_constraintTop_toBottomOf="@id/constroutename">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/route_type"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="Select Route Type*"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectDepartmentTIL"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/hintColor"
                            android:hint="Select route type">

                            <AutoCompleteTextView
                                android:id="@+id/spinnerRouteType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--                        <Spinner-->
                        <!--                            android:id="@+id/spinnerRouteType"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:visibility="gone"-->
                        <!--                            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout3"-->
                        <!--                            app:layout_constraintEnd_toEndOf="parent"-->
                        <!--                            app:layout_constraintHorizontal_bias="0.5"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="@+id/textInputLayout3" />-->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/select_route_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/const_select_route">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/select_route_type"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="Select Route Location*"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Select Location">

                            <AutoCompleteTextView
                                android:id="@+id/spinnerLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:inputType="none"
                                android:padding="14dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constparcel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/select_route_location">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/parcel_deliver"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="No of parcel delivered*"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Number of parcels delivered">

                            <EditText
                                android:id="@+id/edt_parcels"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="12dp"
                                android:textCursorDrawable="@color/orange"
                                android:textSize="13sp"
                                app:layout_constraintTop_toBottomOf="@+id/parcel_deliver"
                                tools:layout_editor_absoluteX="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constparcel_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:padding="12dp"

                        app:layout_constraintTop_toBottomOf="@id/constparcel">


                        <TextView
                            android:id="@+id/parcel_deliver_brought"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:letterSpacing="0.02"
                            android:text="No of Parcel Brought Back"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_edittext_onroad"
                            android:padding="12dp"
                            app:layout_constraintTop_toBottomOf="@+id/parcel_deliver_brought">

                            <ImageView
                                android:id="@+id/pbb_minus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/minus_ic"

                                />

                            <TextView
                                android:id="@+id/parcelsBroughtBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/poppins"
                                android:letterSpacing="0.02"
                                android:text="0"
                                android:textColor="#4A4A4A"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/pbb_plus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/add_ic" />

                        </RelativeLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constmileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:padding="10dp"

                        app:layout_constraintTop_toBottomOf="@id/constparcel_back">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/total_mileage"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="Total Mileage*"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout6"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Total mileage"
                            app:expandedHintEnabled="false"
                            tools:layout_editor_absoluteX="12dp"
                            tools:layout_editor_absoluteY="12dp">

                            <EditText
                                android:id="@+id/edt_mileage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="none"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="12dp"
                                android:textCursorDrawable="@color/orange"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textInputLayout6" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constcomment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:padding="12dp"

                        app:layout_constraintTop_toBottomOf="@id/constmileage">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/route_comment"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/poppins"-->
                        <!--                            android:letterSpacing="0.02"-->
                        <!--                            android:text="Route Comment"-->
                        <!--                            android:textColor="#4A4A4A"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:hint="Route comment">

                            <EditText
                                android:id="@+id/edt_route_comment"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins"

                                android:importantForAutofill="no"
                                android:padding="12dp"
                                android:textColor="#4A4A4A"
                                android:textCursorDrawable="@color/orange"
                                android:textSize="13sp"
                                app:layout_constraintTop_toBottomOf="@+id/route_comment"
                                tools:layout_editor_absoluteX="12dp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constcomment">

                        <ImageView
                            android:id="@+id/cancel"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/cancel_bt" />

                        <ImageView
                            android:id="@+id/onRoadHoursSave"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/save_bt" />

                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>