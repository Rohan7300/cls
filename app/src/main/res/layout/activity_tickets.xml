<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        tools:context=".ui.CreateTicketsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/cdsss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/maincolor"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:text="Create Ticket"
                    android:textColor="@color/black"
                    android:textSize="21sp" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/cdsss">


                <LinearLayout
                    android:id="@+id/rlmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectDepartmentTIL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Select Department">

                        <AutoCompleteTextView
                            android:id="@+id/selectDepartmentET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:padding="14dp"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_below="@+id/const1"
                        android:layout_marginVertical="20dp"
                        android:background="@color/black" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerRequestParent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Select Request Type">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerRequestAT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:padding="14dp"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_below="@+id/view3"
                        android:layout_marginVertical="20dp"
                        android:background="@color/black" />


                    <TextView
                        android:id="@+id/tv_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:letterSpacing="0.01"
                        android:text="Reg No. ( if applicable)"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:visibility="gone" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Registration Number (If Applicable)">

                        <EditText
                            android:id="@+id/tv_registration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:importantForAutofill="no"
                            android:padding="14dp"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <!--                   <EditText
                                           android:id="@+id/tv_registration"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:background="@drawable/shape_edittext_onroad"
                                           android:fontFamily="@font/poppins"
                                           android:hint="Enter vehicle registration number"
                                           android:importantForAutofill="no"
                                           android:letterSpacing="0.01"
                                           android:padding="12dp"
                                           android:visibility="gone"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:textColor="@color/text_color"
                                           android:textSize="14sp"
                                           />-->


                    <!--         <androidx.recyclerview.widget.RecyclerView
                                 android:id="@+id/rv_list3"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:visibility="gone"
                                 app:layout_constraintTop_toBottomOf="@+id/tv_registration" />-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_below="@+id/const3"
                        android:layout_marginVertical="20dp"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:id="@+id/viewx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view4">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Ticket Title*">

                            <EditText
                                android:id="@+id/edt_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:padding="14dp"

                                android:textColorHint="@color/hintColor"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <!--            <TextView
                                        android:id="@+id/tv_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:letterSpacing="0.01"
                                        android:text="Title*"

                                        android:textColor="@color/text_color"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/edt_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_title"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/shape_edittext_onroad"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="top"
                                        android:hint="Enter Title"
                                        android:importantForAutofill="no"
                                        android:letterSpacing="0.01"
                                        android:padding="12dp"
                                        android:textColor="@color/text_color"
                                        android:textSize="14sp" />-->
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.05dp"
                        android:layout_below="@+id/const3"
                        android:layout_marginVertical="20dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--                      <TextView
                            android:id="@+id/tv_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:letterSpacing="0.01"
                            android:text="Description*"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edt_des"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_below="@+id/tv_des"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_edittext_onroad"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:hint="Enter vehicle registration number"
                            android:importantForAutofill="no"
                            android:letterSpacing="0.01"
                            android:padding="13dp"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />-->

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Add Description*">

                            <EditText
                                android:id="@+id/edt_des"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:padding="14dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.05dp"
                            android:layout_below="@+id/const1"
                            android:layout_marginTop="20dp"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cancel"
                                style="@style/ctaStyle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:padding="10dp"
                                android:text="Cancel"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/saveTickets"
                                style="@style/ctaStyle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:backgroundTint="@color/green_200"
                                android:enabled="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="end"
                                android:padding="10dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:text="Save"
                                android:textSize="12sp" />


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/nointernetLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/nowifi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Poor Internet Connection!!"
                    android:textColor="@color/medium_orange"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
