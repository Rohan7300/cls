<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.04"
                    android:text="User Profile"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dpLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dp"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:src="@drawable/celerityimage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="68dp"
                        android:src="@drawable/vector__5_"

                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp"
                        app:layout_constraintEnd_toEndOf="@+id/dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/dp"
                        app:layout_constraintTop_toTopOf="@+id/dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Ana Carolina Souza Dos Santos"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dpLayout" />


                <ImageView
                    android:id="@+id/editImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="47dp"
                    android:padding="4dp"
                    android:src="@drawable/edit_orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

                <LinearLayout
                    android:id="@+id/FormLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    app:layout_constraintTop_toBottomOf="@id/editImg">

                    <!--email-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/firstconst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/emailHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.01"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintTop_toBottomOf="@id/emailHint"

                            >

                            <EditText
                                android:id="@+id/emailtext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:enabled="false"
                                android:textCursorDrawable="@color/light_orange2"
                                android:fontFamily="@font/poppins"
                                android:hint="ANa name"
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:letterSpacing="0.01"
                                android:padding="10dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/text_color"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/ic_infos"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/ic_info"
                                android:visibility="gone" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/ll2">

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/black0" />

                            <TextView
                                android:id="@+id/useEmailas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/use_email_as_username"
                                android:textColor="@color/orange"
                                android:textSize="11sp"
                                android:visibility="gone" />


                        </RelativeLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--username-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/usecc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/usernameHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.01"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llthree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toBottomOf="@id/usernameHint"

                            >

                            <EditText
                                android:id="@+id/usertext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:hint="ANa name"
                                android:textCursorDrawable="@color/light_orange2"
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:letterSpacing="0.02"
                                android:padding="10dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/llthree">

                            <View
                                android:id="@+id/viewtwo"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/text_color" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/usepassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/passwHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.01"

                            android:text="Password"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llfour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintTop_toBottomOf="@id/passwHint"

                            >

                            <EditText
                                android:id="@+id/passtext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:hint="password"
                                android:textCursorDrawable="@color/light_orange2"
                                android:importantForAutofill="no"
                                android:inputType="textPassword"
                                android:letterSpacing="0.02"
                                android:padding="10dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txt_change_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha="0.8"
                                android:gravity="end"
                                android:text="change password"
                                android:textColor="@color/orange"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/llfour">

                            <View
                                android:id="@+id/viewthree"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/text_color" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/usephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/phonetvHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.01"
                            android:text="Phone number"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llfive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toBottomOf="@id/phonetvHint"

                            >

                            <EditText
                                android:id="@+id/phonetext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:hint="phone number"
                                android:importantForAutofill="no"
                                android:textCursorDrawable="@color/light_orange2"
                                android:inputType="phone"
                                android:letterSpacing="0.02"
                                android:padding="10dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/llfive">

                            <View
                                android:id="@+id/viewfour"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/text_color" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/useaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/AddressHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.01"

                            android:text="Address"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llsix"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toBottomOf="@id/AddressHint"

                            >

                            <EditText
                                android:id="@+id/addresstext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:hint="#123 Lorem Lorem Ipsum is simply text of the printing and typesetting "
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:textCursorDrawable="@color/light_orange2"
                                android:letterSpacing="0.02"
                                android:padding="10dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/llsix">

                            <View
                                android:id="@+id/viewsix"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/text_color" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_textview_buttontwo"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:letterSpacing="0.02"
                        android:padding="16dp"
                        android:text="Save changes"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="16dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:indeterminateTint="@color/orange"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/name" />


                <!--phone no-->


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>