<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/very_light_orange"
    tools:context=".fragments.CLSInvoicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/very_light_orange"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar"
            android:id="@+id/dateUpdater"
            app:tint="@color/orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:id="@+id/dateTV"
            android:visibility="gone"
            android:fontFamily="@font/poppins_bold"
            android:text="2023"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="110dp"
            android:id="@+id/yearSpinner"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Year">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:id="@+id/selectYearET"
                android:inputType="none"
                android:hint=""
                android:paddingVertical="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cls_invoices_third_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layoutAnimation="@anim/animation"
        android:layout_marginBottom="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="30"
        tools:listitem="@layout/cls_invoices_adapter_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/noinvoices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:alpha="0.5"
            android:src="@drawable/nocontent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="No data found.\n Please check again later."
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>