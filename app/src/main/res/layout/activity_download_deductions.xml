<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.OutstandingDeductionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1550D"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/back_icon"
                app:tint="@color/white" />



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/deduction"
                android:visibility="gone"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_bold"
                android:text="DA Outstanding Deductions List"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/black" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CLS Deductions"
    android:padding="10dp"
    android:textColor="@color/white"
    android:fontFamily="@font/poppins_bold"
    android:background="@color/medium_orange"
    />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deductionsRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id="@+id/divider"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Third Party Deductions"
            android:id="@+id/thridPartyTv"
            android:padding="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:background="@color/medium_orange"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deductionsthirdPartyRV"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/nodata2"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:alpha="0.5"
                android:src="@drawable/nocontent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="No data found.\n Please check again later."
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/nointernetLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingVertical="7dp"
            android:paddingHorizontal="10dp"
            android:visibility="gone"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/nowifi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor Internet Connection!!"
                android:textColor="@color/medium_orange"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </LinearLayout>
</layout>