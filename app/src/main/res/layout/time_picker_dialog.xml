<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/break_dialog"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_cross_orange"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                android:src="@drawable/orange_cross"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.02"
                android:text="Break Time"
                android:textColor="@color/text_color"

                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_cross_orange" />

            <TextView
                android:id="@+id/tv_breakstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.02"
                android:text="Break Start"
                android:textColor="@color/text_color"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_txt" />

            <TextView
            android:importantForAutofill="no"
                android:id="@+id/edt_breakstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_onroad"
                android:fontFamily="@font/poppins"
                android:hint="00:00"
                android:padding="10dp"
                android:textColorHint="#4A4A4A"
                android:textCursorDrawable="@color/orange"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_breakstart" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="14dp"
                android:id="@+id/ic_breakstart"
                android:backgroundTint="@color/white"
                android:src="@drawable/break_clock"
                app:layout_constraintBottom_toBottomOf="@+id/edt_breakstart"
                app:layout_constraintEnd_toEndOf="@+id/edt_breakstart"
                app:layout_constraintTop_toTopOf="@+id/edt_breakstart" />

            <TextView
                android:id="@+id/tv_breakend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.02"
                android:text="Break End"
                android:textColor="@color/text_color"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_breakstart" />

            <TextView
            android:importantForAutofill="no"
                android:id="@+id/edt_breakend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_onroad"
                android:fontFamily="@font/poppins"
                android:hint="00:00"
                android:padding="10dp"
                android:textColorHint="#4A4A4A"
                android:textCursorDrawable="@color/orange"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_breakend" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="14dp"
                android:id="@+id/ic_breakend"
                android:backgroundTint="@color/white"
                android:src="@drawable/break_clock"
                app:layout_constraintBottom_toBottomOf="@+id/edt_breakend"
                app:layout_constraintEnd_toEndOf="@+id/edt_breakend"
                app:layout_constraintTop_toTopOf="@+id/edt_breakend" />

            <TextView
                style="@style/ctaStyle1"
                android:id="@+id/time_tv_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save &amp; Next"
                android:textAllCaps="false"
                android:fontFamily="@font/inter"
                android:enabled="false"
                android:layout_marginTop="20dp"
                android:textColor="#F36C2E"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_breakend"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_horizontal|center_vertical" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>