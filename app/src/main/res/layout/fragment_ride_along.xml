<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OnRoadHoursFragment">


    <RelativeLayout
        android:id="@+id/rlinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/headings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/ana_carolin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal|top"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="0.02dp"
                android:text="@string/ana_carolin"
                android:textColor="#231F20"
                android:textSize="19sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headings"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/pin_alt_light_two">


                </ImageView>

                <TextView
                    android:id="@+id/dxLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.03"
                    android:text="@string/dxLoc"
                    android:textColor="#231F20"
                    android:textSize="15sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/pin_alt_light_two">

                </ImageView>

                <TextView
                    android:id="@+id/dxReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:gravity="center_horizontal|top"
                    android:letterSpacing="0.03"
                    android:text="@string/dxLoc"
                    android:textColor="#231F20"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/pin_alt_light_two">


                </ImageView>

                <TextView
                    android:id="@+id/dxm5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:gravity="center_horizontal|top"
                    android:letterSpacing="0.03"
                    android:text="@string/dxLoc"
                    android:textColor="#231F20"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedcsroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlinfo">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_edittext_onroad">

            <View
                android:id="@+id/views"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constlayout" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constroutename" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/const_select_route" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constparcel" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constparcel_back" />

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constmileage" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/select_route_location" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.02"
                    android:text="Add Ride Along Hours"
                    android:textColor="#4A4A4A"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constroutename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/views">

                <TextView
                    android:id="@+id/route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Driver*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter route name"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/route" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const_select_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constroutename">

                <TextView
                    android:id="@+id/route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Vehicle*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Not Allocated"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/route_type"
                    tools:layout_editor_absoluteX="12dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/arrow_left"
                    app:layout_constraintBottom_toBottomOf="@+id/editText"
                    app:layout_constraintEnd_toEndOf="@+id/editText"
                    app:layout_constraintTop_toTopOf="@+id/editText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/select_route_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/const_select_route">

                <TextView
                    android:id="@+id/select_route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Route Location*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editText_select_route_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Not Allocated"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/select_route_type"
                    tools:layout_editor_absoluteX="12dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/arrow_left"
                    app:layout_constraintBottom_toBottomOf="@+id/editText_select_route_location"
                    app:layout_constraintEnd_toEndOf="@+id/editText_select_route_location"
                    app:layout_constraintTop_toTopOf="@+id/editText_select_route_location" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constparcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/select_route_location">

                <TextView
                    android:id="@+id/parcel_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Route Name"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_parcels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:hint="Enter route name"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/parcel_deliver"
                    tools:layout_editor_absoluteX="12dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constparcel_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constparcel">


                <TextView
                    android:id="@+id/parcel_deliver_brought"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Route Type"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/parcel_deliver_brought">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/poppins"
                        android:letterSpacing="0.02"
                        android:text="Not Allocated"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp" />



                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constmileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constparcel_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_edittext_onroad"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/edt_traing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Re-Training"
                            android:padding="14dp"
                            android:textColorHint="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="14sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <ImageButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:layout_toRightOf="@id/edt_traing"
                            android:src="@drawable/circle_grey_ic" />
                        
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_edittext_onroad"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/edt_traingtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Re-Training"
                            android:padding="14dp"
                            android:textColorHint="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="14sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <ImageButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:layout_toRightOf="@id/edt_traingtwo"
                            android:src="@drawable/radio_button_blue" />

                    </RelativeLayout>

                </LinearLayout>

             


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constmileage">

                <TextView
                    android:id="@+id/route_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Route Comment"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_route_comment"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter route comment"
                    android:padding="14dp"
                    android:textColor="#4A4A4A"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/route_comment"
                    tools:layout_editor_absoluteX="12dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constcomment">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/cancel_bt" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/save_bt" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>