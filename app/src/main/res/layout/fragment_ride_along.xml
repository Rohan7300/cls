<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OnRoadHoursFragment">

        <include
            android:id="@+id/headerTop"
            layout="@layout/fragment_headers" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_edittext_onroad">

            <View
                android:id="@+id/views"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constlayout" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constroutename" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/const_select_route" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constparcel" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constparcel_back" />

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/constmileage" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/select_route_location" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.02"
                    android:text="Add Ride Along Hours"
                    android:textColor="#4A4A4A"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constroutename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/views">

                <TextView
                    android:id="@+id/route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Driver*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/edt_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:drawableEnd="@drawable/arrow_left"
                    android:fontFamily="@font/poppins"
                    android:hint="Select Driver"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/route" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_routes">

                    <Spinner
                        android:id="@+id/spinnerSelectDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/arrow_left"
                        android:dropDownVerticalOffset="40dp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const_select_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constroutename">

                <TextView
                    android:id="@+id/route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Vehicle*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Not Allocated"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/route_type"
                    tools:layout_editor_absoluteX="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/route_type"
                    tools:layout_editor_absoluteY="12dp">

                    <Spinner
                        android:id="@+id/spinnerSelectVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dropDownVerticalOffset="40dp"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/arrow_left"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/editText"
                    app:layout_constraintEnd_toEndOf="@+id/editText"
                    app:layout_constraintTop_toTopOf="@+id/editText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constparcel_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/const_select_route">


                <TextView
                    android:id="@+id/parcel_deliver_brought"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Select Route Type"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/parcel_deliver_brought"
                    tools:layout_editor_absoluteX="12dp">


                    <TextView
                        android:id="@+id/tvRouteType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="start"
                        android:letterSpacing="0.02"
                        android:text="Not Allocated"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <Spinner
                        android:id="@+id/SpinnerRouteType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/select_route_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/constparcel_back">

                <TextView
                    android:id="@+id/select_route_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"

                    android:text="Select Route Location*"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/editText_select_route_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Not Allocated"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/select_route_type"
                    tools:layout_editor_absoluteX="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edittext_onroad"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_select_route_location">

                    <Spinner
                        android:id="@+id/spinnerRouteLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/arrow_left"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/editText_select_route_location"
                    app:layout_constraintEnd_toEndOf="@+id/editText_select_route_location"
                    app:layout_constraintTop_toTopOf="@+id/editText_select_route_location" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constparcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/select_route_location">

                <TextView
                    android:id="@+id/parcel_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Route Name"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
            android:importantForAutofill="no"
                    android:id="@+id/edt_parcels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:hint="Enter route name"
                    android:padding="14dp"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/parcel_deliver"
                    tools:layout_editor_absoluteX="12dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constmileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constparcel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edittext_onroad"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edt_traing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Re-Training"
                            android:padding="14dp"
                            android:textColorHint="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="14sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/rbReTraining"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/edt_traing"
                            android:background="@color/white"
                            android:src="@drawable/circle_grey_ic" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edittext_onroad"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edt_traingtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Training"
                            android:padding="14dp"
                            android:textColorHint="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="14sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/rbTraining"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/edt_traingtwo"
                            android:background="@color/white"
                            android:src="@drawable/radio_button_blue" />

                    </RelativeLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:padding="12dp"

                app:layout_constraintTop_toBottomOf="@id/constmileage">

                <TextView
                    android:id="@+id/route_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.02"
                    android:text="Route Comment"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
            android:importantForAutofill="no"
                    android:id="@+id/edt_route_comment"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_edittext_onroad"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter route comment"
                    android:padding="14dp"
                    android:textColor="#4A4A4A"
                    android:textColorHint="#4A4A4A"
                    android:textCursorDrawable="@color/orange"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/route_comment"
                    tools:layout_editor_absoluteX="12dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rideAlongCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constcomment">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/cancel_bt" />

                <ImageView
                    android:id="@+id/saveBT"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/save_bt" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>