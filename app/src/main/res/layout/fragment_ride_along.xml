<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.OnRoadHoursFragment">
        <include
            android:id="@+id/headerTop"
            layout="@layout/fragment_headers" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_edittext_onroad">

                    <View
                        android:id="@+id/views"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constlayout" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constroutename" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/const_select_route" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constparcel" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constparcel_back" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/constmileage" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#DDDDDD"
                        app:layout_constraintTop_toBottomOf="@+id/select_route_location" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="0.02"
                            android:padding="10dp"
                            android:background="@drawable/shape_edittext_onroad"
                            android:backgroundTint="@color/very_light_orange"
                            android:text="Add Ride Along Hours"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constroutename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/views">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:id="@+id/selectDepartmentTIL"
                            android:layout_height="match_parent"
                            android:hint="Select Driver*">

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:id="@+id/spinnerSelectDriver"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="13sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/const_select_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"

                        app:layout_constraintTop_toBottomOf="@id/constroutename">

<!--                        <TextView-->
<!--                            android:id="@+id/route_type"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/poppins"-->
<!--                            android:letterSpacing="0.02"-->
<!--                            android:text="Select Vehicle*"-->
<!--                            android:textColor="#4A4A4A"-->
<!--                            android:textSize="15sp"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->




                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:hint="Select Vehicle*">

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:id="@+id/spinnerSelectVehicle"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="13sp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="17dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/arrow_left"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/const_select_route"
                            app:layout_constraintEnd_toEndOf="@+id/const_select_route"
                            app:layout_constraintTop_toTopOf="@+id/const_select_route" />


                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constparcel_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:padding="10dp"

                        app:layout_constraintTop_toBottomOf="@id/const_select_route">


<!--                        <TextView-->
<!--                            android:id="@+id/parcel_deliver_brought"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/poppins"-->
<!--                            android:letterSpacing="0.02"-->
<!--                            android:text="Select Route Type"-->
<!--                            android:textColor="#4A4A4A"-->
<!--                            android:textSize="15sp"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->

                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_edittext_onroad"
                            android:padding="14dp"
                            android:visibility="gone"
                         app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="12dp">


                            <TextView
                                android:id="@+id/tvRouteType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="start"
                                android:letterSpacing="0.02"
                                android:text="Not Allocated"
                                android:textColor="#4A4A4A"
                                android:textSize="15sp" />


                        </RelativeLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Select Route Type*">

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:id="@+id/SpinnerRouteType"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="13sp" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/select_route_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/constparcel_back">



                        <TextView
                            android:id="@+id/editText_select_route_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_edittext_onroad"
                            android:fontFamily="@font/poppins"
                            android:hint="Not Allocated"
                            android:padding="14dp"
                            android:textColorHint="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="14sp"
                            android:visibility="gone"
                         app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="12dp" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Select Route Location*">

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:importantForAutofill="no"
                                android:id="@+id/spinnerRouteLocation"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textColorHint="@color/hintColor"
                                android:textSize="13sp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="17dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/arrow_left"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/editText_select_route_location"
                            app:layout_constraintEnd_toEndOf="@+id/editText_select_route_location"
                            app:layout_constraintTop_toTopOf="@+id/editText_select_route_location" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constparcel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:padding="12dp"

                        app:layout_constraintTop_toBottomOf="@id/select_route_location">

<!--                        <TextView-->
<!--                            android:id="@+id/parcel_deliver"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/poppins"-->
<!--                            android:letterSpacing="0.02"-->
<!--                            android:text="Route Name"-->
<!--                            android:textColor="#4A4A4A"-->
<!--                            android:textSize="15sp"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:hint="Route name*">
                        <EditText
                            android:importantForAutofill="no"
                            android:id="@+id/edt_parcels"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:fontFamily="@font/poppins"
                            android:gravity="start"

                            android:padding="12dp"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="12sp"

                           />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constmileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:padding="12dp"

                        app:layout_constraintTop_toBottomOf="@id/constparcel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_edittext_onroad"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/edt_traing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:hint="Re-Training"
                                    android:padding="12dp"
                                    android:textColorHint="#4A4A4A"
                                    android:textCursorDrawable="@color/orange"
                                    android:textSize="13sp"
                                    tools:layout_editor_absoluteX="12dp" />

                                <RadioButton
                                    android:id="@+id/rbReTraining"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"

                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@id/edt_traing"
                                    android:background="@color/white"
                                    android:src="@drawable/circle_grey_ic" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_edittext_onroad"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/edt_traingtwo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:hint="Training"
                                    android:padding="12dp"
                                    android:textColorHint="#4A4A4A"
                                    android:textCursorDrawable="@color/orange"
                                    android:textSize="14sp"
                                    tools:layout_editor_absoluteX="12dp" />

                                <RadioButton
                                    android:id="@+id/rbTraining"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="5dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@id/edt_traingtwo"
                                    android:background="@color/white"
                                 />

                            </RelativeLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:id="@+id/constcomment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:padding="12dp"

                        app:layout_constraintTop_toBottomOf="@id/constmileage">

<!--                        <TextView-->
<!--                            android:id="@+id/route_comment"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/poppins"-->
<!--                            android:letterSpacing="0.02"-->
<!--                            android:text="Route Comment"-->
<!--                            android:textColor="#4A4A4A"-->
<!--                            android:textSize="15sp"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:hint="Route Comment*">

                        <EditText
                            android:importantForAutofill="no"
                            android:id="@+id/edt_route_comment"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="10dp"

                            android:fontFamily="@font/poppins"

                            android:padding="14dp"
                            android:textColor="#4A4A4A"
                            android:textCursorDrawable="@color/orange"
                            android:textSize="13sp"

                            tools:layout_editor_absoluteX="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/rideAlongCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constcomment">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/cancel_bt" />

                        <ImageView
                            android:id="@+id/saveBT"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/save_bt" />

                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>