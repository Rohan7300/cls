<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtweek"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"

        android:text="Week"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTransporterID"
        android:layout_width="120dp"

        android:layout_height="wrap_content"
        android:layout_gravity="top"
android:text="Transporter ID"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDriver"
        android:layout_width="100dp"

        android:layout_height="match_parent"


        android:text="Driver"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="100dp"

        android:layout_height="match_parent"


        android:text="Location"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="100dp"

        android:layout_height="match_parent"


        android:text="Status"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="100dp"
        android:layout_height="match_parent"


        android:text="Total Score"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDeliver"
        android:layout_width="100dp"

        android:layout_height="match_parent"

        android:text="Delivered"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtDCR"
        android:layout_width="100dp"

        android:layout_height="match_parent"

        android:text="DCR"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDNR"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="Concessions(DNR DPMO)"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtpod"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="POD"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtcc"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="CC"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtsc"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="SC"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtphr"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="PHR"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtce"
        android:layout_width="100dp"

        android:layout_height="match_parent"
        android:text="CE"

        android:textSize="18sp" />
</LinearLayout>