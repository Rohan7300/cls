<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="@color/cardbg"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6FAFA"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerAddInspectionImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardHeader"
            android:orientation="horizontal"
            android:padding="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 . Upload Vehicle Pictures"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/headerStatusIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dropup" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyAddInspectionImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardHeader"
                android:id="@+id/addImagesBtn"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:text="Vehicle Inspection"
                android:textColor="@color/cardbg"
                app:cornerRadius="12sp"
                app:icon="@drawable/imagegallery"
                app:iconSize="25dp"
                app:iconTint="@color/cardbg"
                app:strokeColor="@color/cardbg"
                app:strokeWidth="1dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Other Images"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greyLight"
                    android:id="@+id/addSpareWheelImageBtn"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="Spare Wheel"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white"
                    app:cornerRadius="10sp"
                    android:textSize="11sp"
                    app:icon="@drawable/imagegallery"
                    app:iconSize="25dp"
                    app:iconGravity="top"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4dp" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/greyLight"
                    android:id="@+id/addVehicleInteriorImageBtn"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:textSize="11sp"
                    android:text="Vehicle Interior"
                    android:textColor="@color/white"
                    app:cornerRadius="10sp"
                    app:icon="@drawable/imagegallery"
                    app:iconSize="25dp"
                    app:iconGravity="top"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greyLight"
                    android:id="@+id/addLoadingInteriorImageBtn"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="Loading Interior"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white"
                    app:cornerRadius="12sp"
                    android:textSize="11sp"
                    app:icon="@drawable/imagegallery"
                    app:iconSize="25dp"
                    app:iconGravity="top"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/greyLight"
                    android:id="@+id/addToolsPictureImageBtn"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:textSize="11sp"
                    android:text="Tools Picture"
                    android:textColor="@color/white"
                    app:cornerRadius="20sp"
                    app:icon="@drawable/imagegallery"
                    app:iconSize="25dp"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4dp" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greyLight"
                    android:id="@+id/addVinNumberImageBtn"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Vin Number"
                    android:textSize="11sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/white"
                    app:cornerRadius="20sp"
                    app:icon="@drawable/imagegallery"
                    app:iconSize="25dp"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>