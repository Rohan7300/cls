<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetRealCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blueRactIV"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@drawable/ic_rectangle_blue"
            android:backgroundTint="@color/red_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancleIV"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_close_24"
            android:tint="@color/black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/blueRactIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blueRactIV" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="Vehicle Information"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/blueRactIV"
            app:layout_constraintEnd_toEndOf="@id/blueRactIV"
            app:layout_constraintStart_toStartOf="@+id/blueRactIV"
            app:layout_constraintTop_toTopOf="@id/blueRactIV" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                app:hintAnimationEnabled="false"
                android:hint="Select Vehicle location *"
                app:hintTextColor="@color/black">

                <EditText
                    android:id="@+id/edt_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:editable="false"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="12dp"

                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="30dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_vehicle_location"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_recyclerview"
                        android:overScrollMode="never"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </androidx.cardview.widget.CardView>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_milegae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Previous Recorded Mileage :"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/edt_layout"
                app:layout_constraintTop_toBottomOf="@id/edt_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_layout_two"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="10dp"
                android:hint="Enter Vehicle current mileage *"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_milegae">

                <EditText
                    android:id="@+id/edt_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:padding="12dp"

                    android:textSize="13sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_layout_three"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="16dp"
                android:hint="Enter Add Blue mileage *"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/edt_layout_two">

                <EditText
                    android:id="@+id/edt_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="12dp"

                    android:textSize="13sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_layout_four"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="16dp"
                android:hint="Select vehicle fuel level*"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/edt_layout_three">

                <EditText
                    android:id="@+id/edt_fuel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="12dp"

                    android:textSize="13sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_vehicle_fuellevel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:overScrollMode="never"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_layout_five"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="16dp"
                android:hint="Select vehicle oil level*"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/edt_layout_four">

                <EditText
                    android:id="@+id/edt_oil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="12dp"

                    android:textSize="13sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_vehicle_oillevel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:overScrollMode="never"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/bt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_edittext"
                android:backgroundTint="@color/maroon"
                android:paddingStart="26dp"
                android:paddingTop="12dp"
                android:paddingEnd="26dp"
                android:paddingBottom="12dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_layout_five" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>