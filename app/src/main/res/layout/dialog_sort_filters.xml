<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/break_dialog"
    android:layout_marginBottom="100dp"
    android:layout_marginStart="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_cross_orange"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/orange_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_txt"
            android:layout_width="161dp"
            android:layout_height="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.02"
            android:text="Sort and Filters"
            android:textColor="@color/text_color"

            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_cross_orange" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/checbox_selector"
            android:button="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_txt" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins"
            android:text="Include Completed"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="@id/checkbox" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="From"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/edt_breakstart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edittext_onroad_gray"
            android:fontFamily="@font/poppins"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:enabled="false"
            android:clickable="false"
            android:text="DD-MM-YYYY"
            android:textColorHint="#4A4A4A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/label1" />

        <ImageButton
            android:id="@+id/ic_breakstart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="14dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_calendar_month_24"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/edt_breakstart"
            app:layout_constraintEnd_toEndOf="@+id/edt_breakstart"
            app:layout_constraintTop_toTopOf="@+id/edt_breakstart" />

        <TextView
            android:id="@+id/tv_breakend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.02"
            android:text="To"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_breakstart" />

        <TextView
            android:id="@+id/edt_breakend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edittext_onroad_gray"
            android:clickable="false"
            android:fontFamily="@font/poppins"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:enabled="false"
            android:text="DD-MM-YYYY"
            android:textColorHint="#4A4A4A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_breakend" />

        <ImageButton
            android:id="@+id/ic_breakend"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="14dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_calendar_month_24"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/edt_breakend"
            app:layout_constraintEnd_toEndOf="@+id/edt_breakend"
            app:layout_constraintTop_toTopOf="@+id/edt_breakend" />

        <TextView
            android:id="@+id/tv_next"
            style="@style/ctaStyle1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:fontFamily="@font/inter"
            android:gravity="center_horizontal|center_vertical"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="#F36C2E"
            app:layout_constraintTop_toBottomOf="@id/edt_breakend" />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>