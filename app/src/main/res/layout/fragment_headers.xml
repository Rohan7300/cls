<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/border_shadow_three"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:contentScrim="@color/very_light_orange"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
<!--<TextView-->
<!--    android:layout_width="match_parent"-->
<!--    android:visibility="gone"-->
<!--    android:layout_height="match_parent">-->
<!--   #FFE9E6,FFE0DB  -->

<!--</TextView>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"

            app:layout_collapseMode="parallax">

            <LinearLayout
                android:id="@+id/headings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="8dp"
                android:gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icpnUser"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_margin="4dp"
                    android:src="@drawable/user_profile_icon" />

                <TextView
                    android:id="@+id/ana_carolin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center_horizontal|top"
                    android:letterSpacing="0.04"

                    android:elevation="30dp"
                    android:lineSpacingExtra="0.02dp"
                    android:text="@string/ana_carolin"
                    android:textColor="#231F20"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headings"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:src="@drawable/pin_alt_light_two" />
                        <LinearLayout
                            android:id="@+id/strikedxLoc"
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:visibility="gone"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diagonalred"
                                />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/dxLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="#231F20"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:src="@drawable/trucknew"
                            app:tint="@color/orange" />
                        <LinearLayout
                            android:id="@+id/strikedxRegNo"
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:visibility="gone"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diagonalred"
                                />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/dxReg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="#231F20"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:src="@drawable/calendarnew"
                            app:tint="@color/orange" />
                        <LinearLayout
                            android:id="@+id/strikedxm5"
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:visibility="gone"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diagonalred"
                                />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/dxm5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="#231F20"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>
