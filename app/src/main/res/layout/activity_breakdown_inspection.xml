<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
<ScrollView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/maincolor"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/towtruck" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="BreakDown Inspection"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bodyVehicleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:hint="Vehicle Location*"
                    android:orientation="horizontal"
                    android:textColorHint="@color/hintColor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="12dp"
                        android:text="Vehicle Location - "
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/vehicleLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="-----"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:text="Previous Record Mileage: - - - -"
                    android:textColor="@color/text_color" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Enter Vehicle Current Mileage"
                    android:textColorHint="@color/hintColor">

                    <AutoCompleteTextView
                        android:id="@+id/atvVehicleCurrentMileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColorHint="@color/hintColor"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Enter Add Blue Mileage"
                    android:textColorHint="@color/hintColor">

                    <AutoCompleteTextView
                        android:id="@+id/atvAddBlueMileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColorHint="@color/hintColor"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Select Veh Fuel Level"
                    android:textColorHint="@color/hintColor">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerVehicleFuelLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:padding="12dp"
                        android:textColorHint="@color/hintColor"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Select Veh Oil Level"
                    android:textColorHint="@color/hintColor">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerVehicleOilLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:padding="12dp"
                        android:textColorHint="@color/hintColor"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6FAFA"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headerAddInspectionImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Upload Vehicle Pictures"
                        android:textColor="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bodyAddInspectionImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addImagesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/medium_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="12dp"
                        android:text="Vehicle Inspection"
                        android:textColor="@color/text_color"
                        app:cornerRadius="12sp"
                        app:iconSize="25dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Add Other Images" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#36A9ABAF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:text="Spare Wheel"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/warning2"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:text="Vehicle Interior"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/warning2"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:text="Loading Interior"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/warning2"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:text="Tools Picture"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/warning2"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="10dp"
                                    android:text="Vin Number"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/warning2"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0.2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginVertical="15dp"
                            android:background="@color/text_color" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="0.5dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/dotted"
                            android:backgroundTint="@color/text_color" />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="@color/medium_orange"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="12dp"
                            android:text="Add Image"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:cornerRadius="10sp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/medium_orange"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="25dp"
                android:paddingVertical="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="10sp"
                app:strokeColor="@color/black"
                app:strokeWidth="0.5dp" />
        </LinearLayout>
</ScrollView>
</layout>