<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="otherpolicy"
            type="com.clebs.celerity.models.response.CompanyDocument" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/txteight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.02"
                android:text="@{otherpolicy.DocumentName}"
                android:textColor="@color/text_color" />

            <ImageView
                android:id="@+id/otherDocView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@id/otherDocDownload"
                android:layout_marginStart="-55dp"
                android:layout_toEndOf="@id/txteight"
                android:src="@drawable/baseline_remove_red_eye_24" />


            <ImageView
                android:id="@+id/otherDocDownload"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/download_icon" />

        </RelativeLayout>
    </LinearLayout>
</layout>