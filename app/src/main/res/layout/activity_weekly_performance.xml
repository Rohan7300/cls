<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.WeeklyPerformanceActivity">

        <LinearLayout
            android:id="@+id/consts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1550D"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/back_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Weekly Performance"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/back_icon"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="#AFEEFA"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00D8CB"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Metric"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#AFEEFA" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Score"
                        android:textColor="@color/black" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rewardsRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nodataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <include layout="@layout/no_data_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1550D"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="16dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                app:tint="@color/white" />

            <View
                android:id="@+id/placeHolderViewLeft"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="16dp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/weekSpinner"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="95dp"
                       android:layout_height="wrap_content"
                        android:hint=""
                        android:textColorHint="#11FFFFFF"
                        app:endIconTint="@color/white"
                        android:visibility="visible"
                        app:boxStrokeWidth="0dp"
                        app:expandedHintEnabled="false">

                        <AutoCompleteTextView
                            android:backgroundTint="@color/white"
                            android:id="@+id/selectWeekET"
                            android:layout_width="match_parent"
                            android:dropDownHeight="500dp"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/poppins_semibold"
                            android:hint=""
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:paddingVertical="6dp"
                            android:text=""
                            android:textColor="#00FFFFFF"
                            android:textColorHint="#00FFFFFF"
                            android:textSize="11sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/weekNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cq_sdk_poppins_bold"
                        android:gravity="center"

                        android:text="Week "
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/next"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="16dp"
                android:src="@drawable/baseline_arrow_circle_right_24"
                app:tint="@color/white" />

            <View
                android:id="@+id/placeHolderViewRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</layout>
