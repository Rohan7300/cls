<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.UserTicketsFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:id="@+id/rlreltive"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_filter"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_filter_list_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filters"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_filter"
                android:letterSpacing="0.01"
                android:fontFamily="@font/poppins"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/shape_textview_button"
                android:text="Add new"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                app:drawableEndCompat="@drawable/tickets_ic" />



        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/rv_tickets"
            app:layout_constraintTop_toBottomOf="@+id/rlreltive"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
