<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetRealCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/blueRactIV"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@drawable/ic_rectangle_blue"
                android:backgroundTint="@color/red_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancleIV"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/baseline_close_24"
                android:tint="@color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/blueRactIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/blueRactIV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="Change vehicle for DA"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/blueRactIV"
                app:layout_constraintEnd_toEndOf="@id/blueRactIV"
                app:layout_constraintStart_toStartOf="@+id/blueRactIV"
                app:layout_constraintTop_toTopOf="@id/blueRactIV" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_layout"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Select company *"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/black">

                    <EditText
                        android:id="@+id/edt_company"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:editable="false"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="13sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/sp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="visible"

                    app:layout_constraintBottom_toBottomOf="@+id/edt_layout"
                    app:layout_constraintStart_toStartOf="@+id/edt_layout"
                    app:layout_constraintTop_toTopOf="@+id/edt_layout" />

                <LinearLayout
                    android:id="@+id/llm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shaperadio"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/edt_layout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"


                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edt_traing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Change DA vehicle?"
                            android:padding="12dp"
                            android:textColorHint="#4A4A4A"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/rbReTraining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/edt_traing"

                            android:gravity="center" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edt_traingtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:gravity="center"
                            android:hint="Return vehicle?"
                            android:padding="12dp"
                            android:textColorHint="#4A4A4A"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/rbTraining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/edt_traingtwo"
                        />

                    </RelativeLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_layout_return"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:hint="Select vehicle to return *"
                    android:visibility="gone"
                    app:hintAnimationEnabled="false"
                    app:hintTextColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/edt_layout_two">

                    <EditText
                        android:id="@+id/edt_return_da"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="12dp"

                        android:textSize="13sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_layout_two"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:hint="Select DA *"
                    app:hintAnimationEnabled="false"
                    android:visibility="gone"
                    app:hintTextColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/llm">

                    <EditText
                        android:id="@+id/edt_change_da"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="12dp"

                        android:textSize="13sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Allocated Vehicle : KM73 RCO\n
Vehicle Location : Birmingham - DBI2"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_layout_return" />

                <LinearLayout
                    android:id="@+id/llmtwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shaperadio"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/txt_info">

                    <RelativeLayout
                        android:id="@+id/depopreturn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/returndepo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Return to depo?"
                            android:padding="12dp"
                            android:textColorHint="#4A4A4A"

                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/depo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toEndOf="@id/returndepo"
                            android:background="#FBC8C8"
                            android:gravity="center" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llmthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shaperadio"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/llmtwo">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"


                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtroadworthy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Road worthy?"
                            android:padding="12dp"
                            android:textColorHint="#4A4A4A"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/roadworthy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toEndOf="@id/txtroadworthy"
                            android:background="#FBC8C8"
                            android:gravity="center" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/notworthy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:gravity="center"
                            android:hint="Not Road worthy?"
                            android:padding="12dp"
                            android:textColorHint="#4A4A4A"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="12dp" />

                        <RadioButton
                            android:id="@+id/notworthys"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/notworthy"
                            android:background="#FBC8C8" />

                    </RelativeLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_layout_three"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:hint="Select request type *"
                    android:visibility="gone"
                    app:hintAnimationEnabled="false"
                    app:hintTextColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/llmthree">

                    <EditText
                        android:id="@+id/edt"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="12dp"

                        android:textSize="13sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/edt_layout_three" />

                <TextView
                    android:id="@+id/bt_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/shape_edittext"
                    android:backgroundTint="@color/maroon"
                    android:gravity="center"
                    android:paddingStart="26dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="26dp"
                    android:paddingBottom="12dp"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_select_type" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>